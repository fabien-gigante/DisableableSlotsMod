	"entrypoints": {
		"main": [
			"com.fabien_gigante.DisableableSlotsMod"
		],
		"client": [
			"com.fabien_gigante.DisableableSlotsModClient"
		]
	},
	"mixins": [
		"DisableableSlotsMod.mixins.json",
